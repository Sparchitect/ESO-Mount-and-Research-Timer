<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.esomount"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.esomount.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.esomount.SplashActivity"
            android:label="@string/title_activity_splash"
            android:parentActivityName="com.example.esomount.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.esomount.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.esomount.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.example.esomount.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.esomount.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.esomount.ResearchActivity"
            android:label="@string/title_activity_research"
            android:parentActivityName="com.example.esomount.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.esomount.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.esomount.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.esomount.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.esomount.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.esomount.MountSettingsActivity"
            android:label="@string/title_activity_mount"
            android:parentActivityName="com.example.esomount.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.esomount.HomeActivity" />
        </activity>

        <receiver android:name="com.example.esomount.AlarmReciever" />

        <activity
            android:name="com.example.esomount.AlarmReciever"
            android:label="@string/title_activity_alarm_reciever" >
        </activity>
        <activity
            android:name="com.example.esomount.TimePickerFragment"
            android:label="@string/title_activity_time_picker_fragment"
            android:parentActivityName="com.example.esomount.MountSettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.esomount.MountSettingsActivity" />
        </activity>
    </application>

</manifest>
